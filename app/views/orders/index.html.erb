<div class="index-banner">
  <h1>Your Order</h1>
</div>

<div class="container">
  <div class="order-container">
    <ul class="pizza-grid">
      <% @orders.each do |order| %>
        <li class="pizza-card">
          <img <%= image_tag order.pizza.photo, class: "order-pizza-photo" %>
          <div class="card-product-infos">
            <h2><%= order.pizza.name %></h2>
            <p>Quantity: <%= order.quantity %></p>
            <p>Price: £<%= order.pizza.price %></p>
          </div>
        </li>
      <% end %>
    </ul>
    <h3>Total Quantity: <%= @orders.map { |order| 1 * order.quantity }.sum %> </h3>
    <h3>Total Price: £<%= @orders.map { |order | 1 * order.pizza.price.to_i }.sum %> </h3>
    <div class="links">
      <%= link_to 'Back', root_path, class: "btn btn-dark" %>
    </div>
  </div>
</div>
